{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "foam.edit.linkReferenceDefinitions": "withExtensions",
  "foam.files.ignore": [
    "_site/**/*",
    "_drafts/**/*"
  ],
  "foam.openDailyNote.directory": "_posts",
  "foam.openDailyNote.filenameFormat": "yyyy-mm-dd-'daily-note'",
  "foam.openDailyNote.titleFormat": "fullDate",
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "markdown.preview.breaks": true,
  "pasteImage.path": "${projectRoot}/attachments",
  "pasteImage.showFilePathConfirmInputBox": true,
  "prettier.singleQuote": false,
  "spellright.notificationClass": "warning",
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "vscodeMarkdownNotes.slugifyMethod": "github-slugger",
  
    "ego.power-tools": {
        "buttons": [
            {
                "text": "Get daily note from Google docs",
                "tooltip": "Runs the script to get daily notes from Google docs",
                "action": {
                    "type": "shell",
                    "command": "venv/bin/python python_scripts/daily_notes_from_google_docs/get_daily_notes_from_google_docs.py"
                }
            }
        ]
    },
    "liquid.engine": "jekyll"
}
